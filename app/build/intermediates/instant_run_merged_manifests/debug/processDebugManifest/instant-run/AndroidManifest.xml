<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.attendancesystem"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="27" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <application
        android:debuggable="true"
        android:icon="@android:drawable/ic_input_get"
        android:label="@string/app_name"
        android:testOnly="true" >
        <activity
            android:name="com.attendancesystem.MainAd"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.attendancesystem.RegisterActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.attendancesystem.TestActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.attendancesystem.ManageActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.attendancesystem.AttendanceActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.attendancesystem.Register_adminActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.attendancesystem.Admin_homeActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.attendancesystem.StudentActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.attendancesystem.FactultyActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.attendancesystem.ViewActivity"
            android:label="@string/app_name" />

        <provider
            android:name="com.android.tools.ir.server.InstantRunContentProvider"
            android:authorities="com.attendancesystem.com.android.tools.ir.server.InstantRunContentProvider"
            android:multiprocess="true" />
    </application>

</manifest>